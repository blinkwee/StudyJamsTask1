<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Custum style-->
    <style name="MainButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">more</item>
        <item name="android:textColor">#259b24</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MainMessage1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fbe9e7</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="MainMessage2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <!--<item name="android:textColor">#ff7043</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="SecendButton1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#d0f8ce</item>
    </style>
    <style name="SecendButton2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#2baf2b</item>
    </style>
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#3e2723</item>
    </style>
    <style name="Artical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#424242</item>
    </style>
    <style name="Declare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#616161</item>
    </style>
    <style name="SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#bf360c</item>
    </style>
    <style name="SubLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#bf360c</item>
    </style>
    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3e2723</item>
    </style>
    <style name="SubImage1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="SubImage2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="SubImage3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="SubButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">#ffccbc</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
